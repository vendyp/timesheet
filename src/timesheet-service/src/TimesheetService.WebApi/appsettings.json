{
  "app": {
    "name": "TimesheetServiceApp"
  },
  "auth": {
    "issuerSigningKey": "TEcnxPPHUyrOiYOJXRzkiQREXsTIamUsuelNFIbTaXBWzgBNFYWDCmLHojqy",
    "issuer": "TimesheetApp",
    "validIssuer": "TimesheetApp",
    "validateAudience": false,
    "validateIssuer": true,
    "validateLifetime": true,
    "expiry": "01:00:00",
    "refreshTokenExpiry": "14.00:00:00",
    "cookie": {
      "httpOnly": true,
      "sameSite": "unspecified",
      "secure": false
    }
  },
  "cors": {
    "allowCredentials": true,
    "allowedOrigins": [
      "http://localhost:5000",
      "http://localhost:3000",
      "https://*.vercel.app"
    ],
    "allowedMethods": [
      "POST",
      "PUT",
      "DELETE",
      "PATCH"
    ],
    "allowedHeaders": [
      "Content-Type",
      "Authorization"
    ],
    "exposedHeaders": [
      "Resource-ID"
    ]
  },
  "logger": {
    "level": "information",
    "overrides": {
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Warning"
    },
    "excludePaths": [
      "/",
      "/ping",
      "/metrics"
    ],
    "excludeProperties": [
      "api_key",
      "access_key",
      "ApiKey",
      "ApiSecret",
      "ClientId",
      "ClientSecret",
      "ConnectionString",
      "Password",
      "Email",
      "Login",
      "Secret",
      "Token"
    ],
    "console": {
      "enabled": true
    },
    "file": {
      "enabled": true,
      "path": "logs/logs.txt",
      "interval": "day"
    },
    "tags": {}
  },
  "ConnectionStrings": {
    "azureBlobService": "UseDevelopmentStorage=true",
    "sqlserver": "Server=localhost;Database=TimesheetDb;User ID=sa;Password=Password1234;TrustServerCertificate=True;"
  },
  "fileOptions": {
    "Path": "D:\\Uploads"
  }
}
